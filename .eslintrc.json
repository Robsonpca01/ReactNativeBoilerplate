{
  "extends": "airbnb",
  "env": {
    "node": true,
    "jest": true,
    "browser": true,
    "es6": true
  },
  "parser": "babel-eslint",

  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "linebreak-style": ["error", "unix"],
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "class-methods-use-this": ["error", {
      "exceptMethods": [
        "get",
        "render",
        "getInitialState",
        "getDefaultProps",
        "getChildContext",
        "componentWillMount",
        "componentDidMount",
        "componentWillReceiveProps",
        "shouldComponentUpdate",
        "componentWillUpdate",
        "componentDidUpdate",
        "componentWillUnmount",
      ]
    }]
    
  }
}
